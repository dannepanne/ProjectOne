        {
            if (item.Projectid == Model.Id)
            {

                
                <dt class="col-sm-2">
                    Resource connected to task
                </dt>
                <dd class="col-sm-10">
                    @item.Resourceid
                </dd>
                <dt class="col-sm-2">
                    Task ID
                </dt>
                <dd class="col-sm-10">
                    @item.Id
                </dd>
                <dt class="col-sm-2">
